<Window x:Class="WpfApp6.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="LimeGreen" Offset="3"/>
        </LinearGradientBrush>
    </Window.Background>

    <Viewbox Stretch ="Uniform">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                <Button Name = "btnStart" Click="btnStart_Click" Width="108" FontWeight = "Bold" Content="Start"  FontSize="16" Height="25" />
                <Button Name = "close" Click="close_Click" Width="102" FontWeight = "Bold"  Content="Close"  FontSize="16" RenderTransformOrigin="0.503,0.529" />
                <TextBlock Name = "tbLabel" Margin="20,5,0,0"/>
            </StackPanel>
            <Canvas Name = "canvas1" Width="300" Height="300" Margin="5" Background="#FFFF"/>
        </StackPanel>
    </Viewbox>
</Window>
