<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF0016" Offset="3"/>
        </LinearGradientBrush>
    </Window.Background>

    <Viewbox Stretch ="Uniform">
        <StackPanel>
             <StackPanel Orientation="Horizontal" Margin="7,5,5,0" Width="304">
                <Button Name = "btnStart" Click="btnStart_Click" Width="100" Content="Start" FontWeight = "Bold" FontSize="16" />
                <Button Name = "switch" Click="Switch_Click" Width="100" Content="Switch" FontWeight = "Bold" FontSize="16" />
                <Button Name = "close" Click="close_Click" Width="102" Content="Close" FontWeight = "Bold" FontSize="16" />
                <TextBlock Name = "tbLabel" Margin="20,5,0,0"/>
             </StackPanel>
             <Canvas Name = "canvas1" Width="300" Height="300" Margin="5" Background="#FFFF"/>
        </StackPanel>
    </Viewbox>
    
</Window> 
